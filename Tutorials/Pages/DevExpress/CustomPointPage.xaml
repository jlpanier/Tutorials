<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:dx="http://schemas.devexpress.com/maui"
             xmlns:local="clr-namespace:Tutorials.ViewModels"
             x:Class="Tutorials.Pages.CustomPointPage">
    <ContentPage.BindingContext>
        <local:CustomPointColorizerViewModel />
    </ContentPage.BindingContext>
    <dx:ChartView>
        <dx:ChartView.Series>
            <dx:BarSeries PointColorizer="{local:CustomColorizer}">
                <dx:BarSeries.Data>
                    <dx:SeriesDataAdapter DataSource="{Binding Data}" ArgumentDataMember="Argument">
                        <dx:ValueDataMember Member="Value" Type="Value" />
                    </dx:SeriesDataAdapter>
                </dx:BarSeries.Data>
            </dx:BarSeries>
        </dx:ChartView.Series>
        <dx:ChartView.AxisX>
            <dx:DateTimeAxisX MeasureUnit="Month" />
        </dx:ChartView.AxisX>
    </dx:ChartView>
</ContentPage>