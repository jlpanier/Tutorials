<?xml version="1.0" encoding="utf-8" ?>
<ContentPage NavigationPage.HasNavigationBar="false"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ffimageloading="clr-namespace:FFImageLoading.Maui;assembly=FFImageLoading.Maui"
             xmlns:viewmodel="clr-namespace:Maui.Tutorials.ViewModels"
             xmlns:models="clr-namespace:Maui.Tutorials.Models"
             x:Class="Maui.Tutorials.Pages.CountryPage"
              >
    <StackLayout>
        <Label Text="Pays" FontAttributes="Bold" HorizontalOptions="Center" Padding="0,20,0,20" FontSize="20"/>

        <Grid  Margin="10,0,10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Picker Title="All"
                Margin="10, 0"
                SelectedIndexChanged="OnPickerSelectedCountry">
                <Picker.Items>
                    <x:String>All</x:String>
                    <x:String>Arab world</x:String>
                    <x:String>Central Europe and Baltic</x:String>
                    <x:String>East Asia Pacific</x:String>
                    <x:String>Europe central Asia</x:String>
                    <x:String>Latin America caribbean</x:String>
                    <x:String>Middle East North Africa</x:String>
                    <x:String>North America</x:String>
                    <x:String>Sub Saharan African</x:String>
                    <x:String>Bologne</x:String>
                    <x:String>OECD members</x:String>
                    <x:String>Euro area</x:String>
                    <x:String>European union</x:String>
                    <x:String>UE27 member</x:String>
                    <x:String>G7 member</x:String>
                    <x:String>G20 member</x:String>
                    <x:String>High income</x:String>
                    <x:String>Upper middle income</x:String>
                    <x:String>Lower middle income</x:String>
                    <x:String>Low income</x:String>
                </Picker.Items>
            </Picker>


            <Label Text="{Binding Nbr}"
               Grid.Column="1"
               Grid.Row="0"
               FontSize="15"
               FontAttributes="Bold"
               HorizontalOptions="End" />
        </Grid>

        <ListView Margin="10, 0" RowHeight="60" ItemsSource="{Binding Items}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:Country">
                    <ViewCell>
                        <!-- Padding Left, Top, Right, Bottom -->
                        <StackLayout Padding="0,10,0,10" 
                                     Orientation="Horizontal" 
                                     Spacing="10">

                            <ffimageloading:SvgCachedImage 
                                Source="{Binding Flag}" 
                                HeightRequest="40" WidthRequest="70" Margin="10,20,20,20"
                                Aspect="AspectFill"
                                HorizontalOptions="Center" VerticalOptions="Center"
                                />

                            <Grid 
                                RowDefinitions="Auto,*" RowSpacing="10" ColumnSpacing="0">

                                <Label Text="{Binding Name}"
                                   Grid.Column="0"
                                   Grid.Row="0"
                                   FontSize="15"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Start" />

                                <StackLayout 
                                    Orientation="Horizontal" 
                                    Grid.Column="0"
                                    Grid.Row="1"
                                    Spacing="10">

                                    <Image 
                                        Source="euro.png" 
                                        Margin="0,0,10,00" 
                                        IsVisible="{Binding Euro}"
                                        />

                                    <Image 
                                       Source="oecd.png" 
                                       HeightRequest="20"
                                       WidthRequest="50"
                                       IsVisible="{Binding OecdMembers}"
                                       />

                                    <Image 
                                       Source="europeunion.png" 
                                       HeightRequest="25"
                                       WidthRequest="50"
                                       IsVisible="{Binding EuropeUnion}"
                                       />

                                    <Image 
                                       Source="g7.png" 
                                       HeightRequest="25"
                                       WidthRequest="50"
                                       IsVisible="{Binding G7}"
                                       />

                                    <Image 
                                       Source="g20.png" 
                                       HeightRequest="25"
                                       WidthRequest="50"
                                       IsVisible="{Binding G20}"
                                       />

                                </StackLayout>
                            </Grid>

                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>    