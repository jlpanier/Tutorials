<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodel="clr-namespace:Maui.Tutorials.ViewModels"
    xmlns:models="clr-namespace:Maui.Tutorials.Models"
    x:Class="Maui.Tutorials.Pages.UnicodePage"
    >
    <CollectionView ItemsSource="{Binding Items}" SelectionMode="None">

        <CollectionView.ItemTemplate >
            <DataTemplate x:DataType="models:Unicodes">
                <Border Stroke="#C49B33" StrokeThickness="1" Margin="5,2,5,2">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10,10,10,10" />
                    </Border.StrokeShape>
                    <Grid  >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Label 
                            Grid.RowSpan="2"
                            Grid.Column="0"
                            Grid.Row="0"
                            Text="{Binding Code}" 
                            FontAttributes="Bold" 
                            HorizontalOptions="Center" 
                            VerticalOptions="Center" 
                            FontSize="15"/>

                        <Label Grid.Column="1" Grid.Row="0" Text="{Binding Valeur1}" HorizontalOptions="Center" FontSize="15"/>
                        <Label Grid.Column="2" Grid.Row="0" Text="{Binding Valeur2}" HorizontalOptions="Center" FontSize="15"/>
                        <Label Grid.Column="3" Grid.Row="0" Text="{Binding Valeur3}" HorizontalOptions="Center" FontSize="15"/>
                        <Label Grid.Column="4" Grid.Row="0" Text="{Binding Valeur4}" HorizontalOptions="Center" FontSize="15"/>
                        <Label Grid.Column="5" Grid.Row="0" Text="{Binding Valeur5}" HorizontalOptions="Center" FontSize="15"/>
                        <Label Grid.Column="6" Grid.Row="0" Text="{Binding Valeur6}" HorizontalOptions="Center" FontSize="15"/>
                        <Label Grid.Column="7" Grid.Row="0" Text="{Binding Valeur7}" HorizontalOptions="Center" FontSize="15"/>
                        <Label Grid.Column="8" Grid.Row="0" Text="{Binding Valeur8}" HorizontalOptions="Center" FontSize="15"/>
                        <Label Grid.Column="1" Grid.Row="1" Text="{Binding Valeur9}" HorizontalOptions="Center" FontSize="15"/>
                        <Label Grid.Column="2" Grid.Row="1" Text="{Binding Valeur10}" HorizontalOptions="Center" FontSize="15"/>
                        <Label Grid.Column="3" Grid.Row="1" Text="{Binding Valeur11}" HorizontalOptions="Center" FontSize="15"/>
                        <Label Grid.Column="4" Grid.Row="1" Text="{Binding Valeur12}" HorizontalOptions="Center" FontSize="15"/>
                        <Label Grid.Column="5" Grid.Row="1" Text="{Binding Valeur13}" HorizontalOptions="Center" FontSize="15"/>
                        <Label Grid.Column="6" Grid.Row="1" Text="{Binding Valeur14}" HorizontalOptions="Center" FontSize="15"/>
                        <Label Grid.Column="7" Grid.Row="1" Text="{Binding Valeur15}" HorizontalOptions="Center" FontSize="15"/>
                        <Label Grid.Column="8" Grid.Row="1" Text="{Binding Valeur16}" HorizontalOptions="Center" FontSize="15"/>

                    </Grid>
                </Border>
                
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>